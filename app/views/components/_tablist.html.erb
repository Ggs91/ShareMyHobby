<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#description">Description</a></li>
  <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#participants">Participants</a></li>
  <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#comments">Comments</a></li>
</ul>
<div class="tab-content">
  <div id="description" class="container tab-pane active">
    <br>
    <p>
      <%= @event.description%>
    </p>
  </div>
  <div id="participants" class="container tab-pane fade">
    <% @event.participants.each do |participant| %>
    <br>
    <div class="card" style="width: 20rem;">
      <% if participant.profile_picture.attached? %>
      <%= image_tag(participant.profile_picture, alt: 'profile picture') %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= participant.last_name %>
          <%= participant.first_name %>
        </h5>
        <p class="card-text">
          <p>
             Age : 
            <%= participant.age %>
          </p>
          <p>
             City : 
            <%= participant.department.name %>
          </p>
          <p>
             Email : 
            <%= participant.email %>
          </p>
        </p>
        <a class="btn btn-primary" 
        <%= link_to  "Profile" , user_path(participant.id) %>
      </a>
    </div>
  </div>
  <% end %>
</div>
<div id="comments" class="container tab-pane fade">
  <br>
  <%= render "components/comments" %>
</div>
</div>
