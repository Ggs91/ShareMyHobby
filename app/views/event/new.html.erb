<div class="site-section bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7 mb-5"  data-aos="fade">
            <%= form_tag url_for(action: 'create'), method: "post" do %>

            <form action="#" class="p-5 bg-white">
             
                  <div class="form-group">
                  <%= label_tag 'Title' %>
                  <%= text_field_tag 'title', @event.title, class: "form-control" %>
                  </div>
                  <br /> <br />
                  <div class="form-group">
                  <%= label_tag 'Description' %>
                  <%= text_field_tag 'description', @event.description, class: "form-control"  %>
                  </div>
                  <br /> <br />
                  <div class="form-group">
                  <%= label_tag 'Location' %>
                  <%= text_field_tag 'location', @event.location, class: "form-control" %>
                  </div>
                  <br /> <br />
                  <div class="form-group">
                  <%= label_tag 'Start_Date' %>
                  <%= text_field_tag 'start_date', @event.start_date, class: "form-control"  %>
                  </div>
                  <br /> <br />
                  <div class="form-group">
                  <%= label_tag 'Duration' %>
                  <%= text_field_tag 'duration', @event.duration, class: "form-control" %>
                   </div>
                  <br /> <br />

           <%= submit_tag "Create Post" %>

            <% end %>
            </div>
      </div>
</div>