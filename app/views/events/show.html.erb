<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="mb-4">
          <div class="slide-one-item home-slider owl-carousel">
            <div>
              <img src="/assets/img_1.jpg" alt="Image" class="img-fluid">
            </div>
            <div>
              <img src="/assets/img_2.jpg" alt="Image" class="img-fluid">
            </div>
            <div>
              <img src="/assets/img_3.jpg" alt="Image" class="img-fluid">
            </div>
            <div>
              <img src="/assets/img_4.jpg" alt="Image" class="img-fluid">
            </div>
          </div>
        </div>
        <h4 class="h5 mb-4 text-black">Description</h4>
       <%= @event.description%>
      </div>
      <div class="col-lg-3 ml-auto">
        <div class="mb-5">
        <%= render "components/informations_events" %></div>
            </div>
      <div class="container">
        <div class="comment_post_form">
          <%= form_with model: [@event, @comment] do |f| %>
          <%= f.text_field :body, class:"form-control col-6" %>
          <br>
          <%= f.submit "Comment on this article"%>
          <% end %>
          <br>
        </div>
        <div id="comment_card">
          <% @comments.each do |comment| %>
          <p>
            <%= render "comments/comment", comment: comment %>
          </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
