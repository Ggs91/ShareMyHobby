<div class="site-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 mb-5" data-aos="fade">

        <h2>Create Your Event !</h2>
        <h3>Share Your Hobby & Meet new Feelows that Share the same Passion !</h2><br />

        <%= form_for @event do |f| %>

        <div class="form-group">
          <%= f.label :category_id, class: "h4" %><br />
          <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name,  prompt: true),include_blank: "Choose a category", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :title, class: "h4" %> :</br>
          <%= f.text_field :title, placeholder: "Ex: Come watch me perform at comedy bar this saturday !", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :descritpion, class: "h4" %> :</br>
          <%= f.text_area :description, placeholder: "In few words:\n-Introduce your hobby and what you love about it\n-Describe your event proposition (live demo, workshop...)\n-Place (your place, cafÃ©, park, showplace..)\n-Notes for your hosts (invit them to bring they own instrument...", rows: "5", class: "form-control" %>
        </div>

        <br/>
        <br/>
        <div class="form-group">
          <%= label_tag 'Description' %>
          <%= text_field_tag 'description', @event.description, class: "form-control" %>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <%= label_tag 'Location' %>
          <%= text_field_tag 'location', @event.location, class: "form-control" %>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <%= label_tag 'Start_Date' %>
          <%= text_field_tag 'start_date', @event.start_date, class: "form-control" %>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <%= label_tag 'Duration' %>
          <%= text_field_tag 'duration', @event.duration, class: "form-control" %>
        </div>
        <br/>
        <br/>

        <%= submit_tag "Create Post" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
