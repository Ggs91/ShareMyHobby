<div class="container">
  <% if user_signed_in?%>
    <h1>Message
      <%= @conversation.recipient.email %></h1>
    <% if @over_ten %>
      <%= link_to "Show previous messages", '?m=all', class:'button is-link' %>
    <% end %>

    <div class="messages">
      <% @messages.each do |message| %>
        <% if message.body %>
          <% user = User.find(message.user_id) %>
            <div class="unique_message">
              <div class="message_info">
                <strong><%= user.email %></strong>
                <%= message.message_time %>
              </div>
              <div class="message_body">
                <%= message.body %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div><br>

      <%= form_for [@conversation, @message] do |f| %>
      <div class="form-group">
        <%= f.text_area :body, class: "textarea col-9", placeholder: "Whatever you say say nothing..." %>
        <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
      </div>

      <div class="form-group">
        <%= f.submit "message", class: "btn btn-lg btn-primary " %>
      </div>
    <% end %>
  <% end %>
</div>
