<div class="container col-12">
  <div class="row">
    <%if comment.user.profile_picture.attached?%>
      <div class="user_profile_picture">
        <%= image_tag(comment.user.profile_picture, alt: 'user profil picture' ,width: 40) %>
      </div>
    <% end %>
    <%= comment.creation_date %> by
    <%= link_to comment.commenter_full_name, user_path(comment.user.id) %> : <%= comment.body %> <br />
  </div>
</div>
