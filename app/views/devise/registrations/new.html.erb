    <div class="site-section bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7 mb-5"  data-aos="fade">

            <% resource.department ||= Department.new %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>


            <form action="#" class="p-5 bg-white">

               <div class="form-group">
                <%= f.label :email, class: "h4" %> :</br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "h4" %> : <% if @minimum_password_length %>(<%= @minimum_password_length %> characters minimum)<br />
              <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, class: "h4" %> :<br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :last_name, class: "h4" %> :<br />
                <%= f.text_field :last_name, class: "form-control" %>
              </div>

             <div class="form-group">
                <%= f.label :first_name, class: "h4" %> :<br />
                <%= f.text_field :first_name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :age, class: "h4" %> :<br />
                <%= f.text_field :age, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :description, class: "h4" %> :<br />
                <%= f.text_area :description, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.fields_for resource.department do |department_form| %>
                <%= department_form.label :name, :Department, class: "h4" %> :<br />
                <%= department_form.select :name, options_from_collection_for_select(Department.all, :id, :name), class: "form-control" %>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :profil_picture, class: "h4" %><br>
                <%= f.file_field :profil_picture %>
              </div>
            
               <div class="form-group">
                <%= f.submit "Sign Up", class: "booking-confirm hvr-shutter-out-horizontal" %>
              </div>
              <% end %>

            </form>
          </div>

        </div>
      </div>
    </div>


    <div class="newsletter bg-primary py-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <h2>Newsletter</h2>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
          </div>
          <div class="col-md-6">

            <form class="d-flex">
              <input type="text" class="form-control" placeholder="Email">
              <input type="submit" value="Subscribe" class="btn btn-white">
            </form>
          </div>
        </div>
      </div>
    </div>
