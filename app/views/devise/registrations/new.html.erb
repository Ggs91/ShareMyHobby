<div class="site-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 mb-5" data-aos="fade">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email, class: "h4" %> *:<br/>
            <%= f.email_field :email, placeholder: "email@email.com", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "h4" %> *: <% if @minimum_password_length %>(<%= @minimum_password_length %> characters minimum)<br />
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "h4" %> *:<br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: "h4" %> *:<br />
            <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :first_name, class: "h4" %> *:<br />
            <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, class: "h4" %> :<br />
            <%= f.text_field :phone_number, placeholder: "01.23.45.67.89", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :date_of_birth, class: "h4" %> :<br />
            <%= f.date_field :date_of_birth, min: Date.new(1930, 01, 01), max: Date.today, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :description, class: "h4" %> :<br />
            <%= f.text_area :description, placeholder:"I'm passionate about photography and I would love to share it with other people and find other photographers around me...", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :department_id, class: "h4" %> *:<br />
            <%= f.select :department_id, options_from_collection_for_select(Department.all, :id, :name,  prompt: true),include_blank: "Choose a department", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :profile_picture, "Add a profile picture", class: "h4" %><br>
            <%= f.file_field :profile_picture, accept: ".png,.jpeg"%>
          </div>

          <div class="form-group">
            <%= f.submit "Sign Up", class: "btn btn-primary rounded" %>
          </div>
          <% end %>

      </div>
    </div>
  </div>
</div>
