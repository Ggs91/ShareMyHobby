<div class="site-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 mb-5 mt-5"  data-aos="fade">
        <h1 class="text-center">Log in</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group required">
            <%= f.label :email,  class: "control-label font-weight-bold"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Required", class: "form-control" %>
          </div>

          <div class="form-group required">
            <%= f.label :password,  class: "control-label font-weight-bold" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password Required", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="text-center">
            <div class="actions">
              <%= f.submit "Log in", class: "btn-primary rounded py-2 px-4 text-black"  %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>
