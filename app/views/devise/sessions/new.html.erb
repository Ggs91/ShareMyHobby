<div class="site-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 mb-5"  data-aos="fade">
<form>
      <h1 class="text-center"> Log In </h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 

          <div class="form-group required">
            <%= f.label :email, class: "control-label font-weight-bold" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Required" %>
          </div>

          <div class="form-group required">
            <%= f.label :password, class: "control-label font-weight-bold" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password Required" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions text-center">
            <%= f.submit "Log in", class: "btn-primary rounded py-2 px-4 text-white" %>
          </div>
        <% end %>
        <br>
          <div class="text-center">
             <%= render "devise/shared/links" %>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
