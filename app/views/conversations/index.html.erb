<div class="site-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 mb-5 mt-5" data-aos="fade">
        <div class="columns">
          <div class="column is-7">
            <h3 class="title is-3">Conversation(s) en cours</h3>
            <% @conversations.each do |conversation| %>
              <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                <% if conversation.sender_id == current_user.id %>
                  <% recipient = User.find(conversation.recipient_id) %>
                  <% else %>
                    <% recipient = User.find(conversation.sender_id) %><% end %>
                    <% unless current_user == recipient %>
                      <div class="columns">
                        <div class="column">
                          <div class="inline-block">
                            <%= link_to recipient.first_name, conversation_messages_path(conversation) %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
